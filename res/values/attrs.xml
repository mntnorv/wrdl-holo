<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="backgroundColor" format="color"/>
    
    <declare-styleable name="FlatProgressBarView">
	    <attr name="android:textSize"/>
	    <attr name="android:textColor"/>
	    <attr name="backgroundColor"/>
	    <attr name="progressBarColor" format="color"/>
	</declare-styleable>
	
    <declare-styleable name="SquareGridLayout">
	    <attr name="size" format="integer"/>
	</declare-styleable>
	
	<declare-styleable name="TileGridView">
	    <attr name="backgroundColor"/>
	    <attr name="indicatorColor" format="color"/>
	    <attr name="indicatorEnableShadow" format="boolean"/>
        <attr name="indicatorHeight" format="dimension"/>
        <attr name="indicatorShadowColor" format="color"/>
        <attr name="indicatorShadowXOffset" format="dimension"/>
        <attr name="indicatorShadowYOffset" format="dimension"/>
        <attr name="respondToTouch" format="boolean"/>
        <attr name="tileTextColor" format="color"/>
	</declare-styleable>
	
	<declare-styleable name="TileView">
        <attr name="android:text"/>
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="tileSize" format="dimension"/>
	</declare-styleable>
</resources>