<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.mntnorv.wrdl_holo"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.mntnorv.wrdl_holo.views.TileGridView
        android:id="@+id/mainTileGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:columns="4"
        app:respondToTouch="true"
        app:rows="4"
        app:tileColor="#FFC8C8C8"
        app:tileHighlightColor="#FF76D0FF" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mainTileGrid"
        android:layout_alignRight="@+id/mainTileGrid"
        android:layout_below="@+id/mainTileGrid" >

        <EditText
            android:id="@+id/currentWordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textCapCharacters"
            android:textSize="@dimen/wordField_textSize" />

        <com.mntnorv.wrdl_holo.views.WordStatusView
            android:id="@+id/wordStatusView"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textSize="24dp" />

    </FrameLayout>

</RelativeLayout>
