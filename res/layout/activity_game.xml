<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.mntnorv.wrdl_holo"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.mntnorv.wrdl_holo.views.FlatProgressBarView
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textColor="#FF787878"
        android:textSize="40sp"
        app:progressBackgroundColor="#FFA9A9A9"
        app:progressBarColor="#FF33B6EA" />

    <com.mntnorv.wrdl_holo.views.TileGridView
        android:id="@+id/mainTileGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        app:columns="4"
        app:gridBackgroundColor="#FFC8C8C8"
        app:indicatorColor="#FF33B6EA"
        app:indicatorHeight="8dp"
        app:respondToTouch="true"
        app:rows="4" />

</RelativeLayout>
