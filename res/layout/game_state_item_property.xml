<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_property_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_property_top_margin"
        android:text="game mode"
        android:textSize="@dimen/item_property_name_text_size" />

    <TextView
        android:id="@+id/item_property_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_property_name_margin"
        android:text="Infinity"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>