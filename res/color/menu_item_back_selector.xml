	<item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android" >
		    <solid 
		        android:color="@color/menu_item_back_color" />
		    
			<stroke
		        android:width="@dimen/menu_item_border_width"
		        android:color="@color/menu_item_border_color" />
		</shape>
	</item>
